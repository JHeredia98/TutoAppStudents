<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sign_up_container_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"

            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/sign_up_container_lastname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/sign_up_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellido"

            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="156dp"
        android:text="Genero"
        android:textSize="22sp" />

    <Spinner
        android:id="@+id/fragment_signupuser_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp">


    </Spinner>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/fragment_signup_user_container_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_margin="15dp"
        android:layout_below="@+id/fragment_signupuser_gender">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefono"

            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_below="@+id/fragment_signup_user_container_phone"
        android:text="Registra tu ubicaciÃ³n"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        >


    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="Continuar"
        android:id="@+id/signupuser_continue"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:layout_margin="20dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rounded_buttton" />


</RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_customdialog_pick_institution_container"
        android:weightSum="4"
        android:padding="5dp"> <!-- to show what the parent is -->
        <LinearLayout

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad Institucion"
                />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_customdialog_pick_institution_container_city"
                android:entries="@array/Ciudades"
                >


            </Spinner>
        </LinearLayout>
        <LinearLayout

            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selecciona tu Institucion"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/layout_customdialog_pick_institution_container_institution"
                >


            </Spinner>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_customdialog_pick_institution_container_button"
        android:layout_below="@+id/layout_customdialog_pick_institution_container"
        android:text="Seleccionar"
        />
</RelativeLayout>

